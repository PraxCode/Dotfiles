# System Aliases
alias vi="lvim"
alias la="ls -a --color=auto"
alias ls="lsd --color=auto"
alias cpdir="cp -r "
alias rm="trash"
alias mkexe="chmod +x"

alias symlink="ln -s"
alias "tmuxsource"="tmux source-file ~/dotfiles/tmux/tmux.conf"

# Package Managers
alias pacS="sudo pacman -S"
alias pacU="sudo pacman -U"
alias pacR="sudo pacman -R"
alias pacUp="sudo pacman -Syu"
alias pacSearch="sudo pacman -Ql"
alias yayS="yay -S"
alias yayR="yay -R"
alias yayU="yay -U"
alias yaySearch="yay -Ql"

# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# Config Files
alias !conf="cd ~/.config"
alias !dot="cd ~/dotfiles"
alias !fish="cd ~/.config/fish"
alias !awesome="cd ~/.config/awesome"
alias !picom="cd ~/.config/picom"
alias !vim="cd ~/.config/lvim"
alias !kitty="cd ~/.config/kitty"
alias !rofi="cd ~/config/rofi"

# Projects
alias !proj="cd ~/Projects"
alias !pm="cd ~/Projects/planar_monomials/"
alias !dsa="cd ~/Projects/dsa"

